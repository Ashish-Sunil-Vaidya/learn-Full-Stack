<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>:
    <input type="text" name="name" id="name" value="<%= searchOptions.name %>" required>
    <input type="submit" value="Search">
</form>
<br>

<%- include('../partials/errorMessage') %>
<% authors.forEach((author)=> { %>
    <div>
        <h3>
            <%= author.name %>
        </h3>
        <div style="display: flex; gap:10px">
            <a href="/authors/<%= author.id %>">View</a>
            <a href="/authors/<%= author.id %>/edit">Edit</a> 
            <%- include('../partials/deleteform',{url:`/authors/${author.id}?_method=DELETE`}) %>
        </div>
    </div>
    <% }) %>